{
  "compilerOptions": {
    "incremental": true,
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./__tests__/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
